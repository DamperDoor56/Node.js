<%- include("template/cabecera" , {tituloWeb: 'Pagina de Publicaciones'})  %>  
    <body>
        <div class="container">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Description</th>
                    <th>Accion</th>
                </tr>
                </thead>
                <tbody>
                    <% if (arrayPublicaciones.length > 0) { %>
                        <% arrayPublicaciones.forEach(publicacion => { %>
                           <tr>
                               <td><%= publicacion.id %></td>
                               <td><%= publicacion.titulo %></td>
                               <td><%= publicacion.descripcion %></td>
                               <td>
                                <a href="publicacion/<%= publicacion.id %>">
                                    details
                                </a>
                               </td>
                           </tr>
                        <% }) %>
                       <% } %>
                </tbody>
            </table>
                <button class="submit" type="submit"><a href="/publicacion/crear">Publica algo</a></button>
        </div>
        <%- include("template/footer") %>  